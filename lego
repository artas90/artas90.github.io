if [ `whoami` != "root" ]; then
  echo "must be run as root"
  exit
fi

_legover="4.16.1" && \
_legopkg="https://github.com/go-acme/lego/releases/download/v${_legover}/lego_v${_legover}_linux_amd64.tar.gz"

mkdir _legopkg && \
curl -s -L "${_legopkg}" | tar xz -C ./_legopkg && \
mv ./_legopkg/lego /usr/bin/lego && \
rm -rf _legopkg && \
echo "created /usr/bin/lego"

unset _legover _legopkg
